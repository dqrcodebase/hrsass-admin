{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./types/global.d.ts"],
    "module": "ESNext",
    "target": "ESNext",
    "paths": {
      "@/*": ["src/*"],
    },
    "moduleResolution": "node",
  },
  "include": [
    "mock/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "**/*.js",
    "node_modules"
  ],
}
